generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// USER SCHEMA
model User {
    id               String   @id @default(uuid())
    name             String
    email            String   @unique
    role             String   @default("user")
    password         String
    description      String?
    image            String?
    organization     String?
    location         String?
    isAccountDeleted Boolean  @default(false)
    createdAt        DateTime @default(now())
}
